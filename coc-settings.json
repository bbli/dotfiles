{
    "diagnostic.refreshOnInsertMode":true,
    "diagnostic.refreshAfterSave": true,
    "languageserver": {
        "ocaml": {
            "command": "opam",
            "args": [
                "config",
                "exec",
                "--",
                "ocaml-language-server",
                "--stdio"
            ],
            "filetypes": [
                "ocaml",
                "reason"
            ]
        }
    },
    "python.pythonPath":"python",
    "python.analysis.extraPaths":["/home/benson/Dropbox/Code/Projects/my_plugin/rplugin/python3"],
    "python.analysis.useLibraryCodeForTypes": true,
    "python.linting.pylintArgs": [
        "--init-hook",
        "import sys; sys.path.append('/home/benson/Dropbox/Code/Projects/my_plugin/rplugin/python3')"
    ],
    "coc.preferences.formatOnType": false,
    "coc.preferences.formatOnSaveFiletypes": [],
    "coc.preferences.useQuickfixForLocations": true,
    "yank.enableCompletion": false,
    "yank.list.maxsize": 20,
    "suggest.noselect": true,
    "suggest.maxCompleteItemCount": 8,
    "suggest.localityBonus": true,
    "suggest.languageSourcePriority": 99,
    "rust.jobs": 3,
    "rust.clippy_preference": "on",
    "rust-analyzer.inlayHints.chainingHints": true,
    "rust-analyzer.inlayHints.typeHints": true,
    "rust-analyzer.inlayHints.parameterHints": true,
    "rust-analyzer.trace.server": "verbose",
    "codeLens.enable": false,

    "clangd.fallbackFlags": ["-std=c++20"]
}
